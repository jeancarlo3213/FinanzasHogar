@page "/login"
@using System.ComponentModel.DataAnnotations
@inject SignInManager<IdentityUser> SignInManager
@inject NavigationManager Navigation
@using FinanzasHogar.Models

<h3>Iniciar Sesión</h3>

<EditForm Model="loginModel" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <InputText id="email" @bind-Value="loginModel.Email" placeholder="Email" />
    <InputText id="password" type="password" @bind-Value="loginModel.Password" placeholder="Contraseña" />
    <button type="submit">Iniciar Sesión</button>
</EditForm>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@code {
    private LoginModel loginModel = new LoginModel();
    private string? errorMessage;

    private async Task HandleLogin()
    {
        errorMessage = null;
        try
        {
            var result = await SignInManager.PasswordSignInAsync(loginModel.Email, loginModel.Password, isPersistent: false, lockoutOnFailure: false);
            if (result.Succeeded)
            {
                Navigation.NavigateTo("/perfil");
            }
            else
            {
                errorMessage = "Intento de inicio de sesión inválido.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error durante el inicio de sesión: {ex.Message}";
        }
    }
}

