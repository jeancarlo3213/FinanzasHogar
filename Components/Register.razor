@page "/register"
@using System.ComponentModel.DataAnnotations
@using FinanzasHogar.Models
@inject UserManager<IdentityUser> UserManager
@inject NavigationManager Navigation

<h3>Registro</h3>

<EditForm Model="registerModel" OnValidSubmit="HandleRegister">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <InputText id="email" @bind-Value="registerModel.Email" placeholder="Email" />
    <InputText id="password" type="password" @bind-Value="registerModel.Password" placeholder="Contraseña" />
    <InputText id="confirmPassword" type="password" @bind-Value="registerModel.ConfirmPassword" placeholder="Confirmar Contraseña" />
    <button type="submit">Registrar</button>
</EditForm>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">@successMessage</div>
}

@code {
    private RegisterModel registerModel = new RegisterModel();
    private string errorMessage;
    private string successMessage;

    private async Task HandleRegister()
    {
        errorMessage = null;
        successMessage = null;
        var user = new IdentityUser { UserName = registerModel.Email, Email = registerModel.Email };
        var result = await UserManager.CreateAsync(user, registerModel.Password);

        if (result.Succeeded)
        {
            successMessage = "Registro exitoso. Ahora puede iniciar sesión.";
            registerModel = new RegisterModel(); // Limpiar los campos del formulario
        }
        else
        {
            errorMessage = string.Join(" ", result.Errors.Select(e => e.Description));
        }
    }

    public class RegisterModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required]
        [DataType(DataType.Password)]
        public string Password { get; set; } = string.Empty;

        [Required]
        [DataType(DataType.Password)]
        [Compare("Password", ErrorMessage = "Las contraseñas no coinciden.")]
        public string ConfirmPassword { get; set; } = string.Empty;
    }
}

